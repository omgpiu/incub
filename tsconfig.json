{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "target": "es2016",
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
  },
  "include": [
    "src/**/*",
    "bin/**/*"
  ]
}
